<template>
  <div className='container'>
    <style>
      .container {
        display: border-box;
        width: 600px;
        height: 300px;
        margin:0 auto;
        border-radius: 3px;
        background: #dff7f4;
        padding: 10px 0 0 10px;
      }
      .button {
        display: inline-block;
        width: 80px;
        height: 30px;
        color: #fff;
        cursor: pointer;
        margin: 0 10px 10px 0;
        line-height: 30px;
        text-align: center;
        border-radius: 3px;
        background: #61b967;
      }
    </style>
    <div :style='{ marginBottom: "10px" }'>Record sound demo</div>
    <div>
      <span className='button' @click='start'>record</span>
      <span className='button' @click='stop'>stop</span>
    </div>
  </div>
</template>

<script>
  import Hearken, { Pitch, Record } from '../src'
  import pitchShift from 'pitch-shift'

  const pitch = window.p = new Pitch(pitchShift, {
      frameSize: 2048,
      hopSize: 512,
      channel: 2,
    }
  )

  const m = window.m = new Hearken().create({
    // delay: 2,
    volume: 1,
  })
  const r = window.r = new Record(2048, 2, m.AudioCtx)

  r.connect(m)
  r.connect(pitch)

  const cm = window.cm = Grass.mount(window.root, function CM (props) {
    props.start = start
    props.stop = stop
    return // #temp string
  })

  r.connect(r)

  function start () {
    r.start().then(s => s && m.start())
  }

  function stop () {
    r.stop()
  }
</script>